{
  "name": "learning-git2",
  "version": "1.0.0",
  "description": "https://meganguk.github.io/learning-git2/",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:html",
    "test:html": "globstar nu-html-checker *.html",
    "init:project": "npm install && npm run init:dirs && npm run init:files && npm run init:gitignore",
    "init:dirs": "mkdirp sass css vendor images js",
    "init:files": "touch README.md index.html sass/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "build": "npm run build:clean && npm run bulid:sass",
    "build:clean": "rm -rf css/*.css",
    "build:sass": "node-sass --output-style expanded --source-map true -o css sass --build",
    "build:autoprefixer": "autoprefixer-cli css/style.css",
    "watch": "npm run watch:browsersync && npm run watch:sass",
    "watch:browsersync": "globstar browser-sync start --server --files 'css/*.css' '*.html'",
    "watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
    "watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css",
    "watch:sassprefixer": "onchange -d 100 sass/style.scss -- node-sass --output-style expanded --source-map true -o css sass && autoprefixer-cli -o css/style.prefixed.css css/style.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meganguk/learning-git2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/meganguk/learning-git2/issues"
  },
  "homepage": "https://github.com/meganguk/learning-git2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.4",
    "globstar": "^1.0.0",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.0.0",
    "package.json": "^2.0.1"
  },
  "dependencies": {
    "node-sass": "^4.9.0",
    "rimraf": "^2.6.2"
  }
}
